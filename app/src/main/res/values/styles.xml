<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/lightGrey</item>
        <item name="colorControlActivated">@color/duskYellow</item>
    </style>
    <style name="WhiteText" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="SemiWhiteText" parent="@style/WhiteText">
        <item name="android:textSize">@dimen/semi_small_text_size</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="LargeBlackText" parent="@style/BlackText">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Toast</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="llFooter">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ivFooter">
        <item name="android:layout_width">@dimen/margin_common</item>
        <item name="android:layout_height">@dimen/margin_common</item>

    </style>

    <style name="IconSmall">
        <item name="android:layout_width">@dimen/icon_small</item>
        <item name="android:layout_height">@dimen/icon_small</item>
        <item name="android:padding">3dp</item>
    </style>


    <style name="IconLarge">
        <item name="android:layout_width">@dimen/icon_large</item>
        <item name="android:layout_height">@dimen/icon_large</item>

    </style>

    <style name="llWrapBoth">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="llMatchBoth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="matchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="matchHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="tvFooter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_footer</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>

        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>

    </style>

    <style name="vFooter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:background">@color/darkgrey</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="tvCommon">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/common_text</item>
    </style>

    <style name="llND">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/margin_ten</item>
        <item name="android:layout_marginTop">@dimen/margin_common</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="tvND">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_common</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/common_text</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="tvSubND">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_common</item>
        <item name="android:paddingTop">@dimen/margin_common</item>
        <item name="android:layout_marginBottom">@dimen/margin_ten</item>
        <item name="android:textSize">@dimen/text_sixteen</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_gravity">start</item>

    </style>

    <style name="vCommon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/margin_common</item>
        <item name="android:background">@color/colorGray</item>
    </style>

    <style name="vCommonMini">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginStart">@dimen/margin_ten</item>
        <item name="android:background">@color/colorGray</item>
    </style>

    <style name="matchBoth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrapBoth">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="widthMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edtLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/common_text</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="btnLogin">
        <item name="android:layout_width">@dimen/sign_button</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/common_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/margin_ten</item>
        <item name="android:background">@drawable/button_gradient_background</item>
    </style>

    <style name="btnContactUs">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height_contact_us</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:background">@drawable/button_gradient_background</item>
    </style>
    <style name="btnContactUsSubmit">
        <item name="android:layout_width">@dimen/sign_button</item>
        <item name="android:layout_height">@dimen/button_height_contact_us</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:background">@drawable/button_gradient_background</item>
    </style>

    <style name="imgSocial">

        <item name="android:layout_width">@dimen/social_icon_size</item>
        <item name="android:layout_height">@dimen/social_icon_size</item>
        <item name="android:padding">@dimen/margin_small</item>
    </style>

    <style name="loginHeadImage">
        <item name="android:layout_width">@dimen/login_image</item>
        <item name="android:layout_height">@dimen/login_image</item>
        <item name="android:foregroundGravity">center_horizontal</item>
    </style>

    <style name="BlackText" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="MediumBlackText" parent="@style/BlackText">
        <item name="android:textSize">@dimen/common_text</item>
    </style>

    <style name="tvContactUs">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tvAboutUs">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="imgContactUs">
        <item name="android:layout_width">@dimen/contact_us_image_height_width</item>
        <item name="android:layout_height">@dimen/contact_us_image_height_width</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="etContactUs">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/common_text</item>
    </style>

    <style name="StandardMargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_ten</item>

        <item name="android:layout_marginStart">@dimen/margin_common</item>


    </style>

    <style name="DashboardHeadImage">
        <item name="android:layout_width">@dimen/dashboard_image</item>
        <item name="android:layout_height">@dimen/dashboard_image</item>
    </style>

    <style name="tvBottomCourseDetails">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextViewProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:layout_marginTop">@dimen/margin_common</item>
        <item name="android:padding">@dimen/margin_ten</item>
        <item name="android:textSize">@dimen/text_small</item>

    </style>
    <style name="tagTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:background">@drawable/back_tutor_list</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
    </style>


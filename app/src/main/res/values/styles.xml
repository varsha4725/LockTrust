    <style name="EditTextProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/common_text</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="LargeWhiteText" parent="@style/WhiteText">
        <item name="android:textSize">@dimen/text_large</item>
    </style>
    <style name="sort_filter_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/darkBlue</item>

    </style>
    <style name="filterText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_common</item>
        <item name="android:textSize">@dimen/common_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="down_arrow">
        <item name="android:layout_width">@dimen/margin_thirty</item>
        <item name="android:layout_height">@dimen/margin_thirty</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:src">@drawable/ic_down_arrow</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>

    </style>
    <style name="view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_margin">@dimen/margin_fifteen</item>

    </style>
    <style name="BoldText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">@dimen/common_text</item>
        <item name="android:textColor">@color/darkBlue</item>

    </style>
    <style name="simpleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:layout_marginStart">@dimen/margin_ten</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_small</item>

    </style>
    <style name="btnTutor">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/common_text</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:background">@drawable/button_gradient_background</item>
    </style>
    <style name="MyTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">12sp</item>

    </style>


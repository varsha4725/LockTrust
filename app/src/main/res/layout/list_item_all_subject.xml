<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/margin_small"
    app:cardCornerRadius="@dimen/margin_fifteen"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llSubject"
        android:orientation="vertical"
        android:padding="@dimen/margin_small">


        <ImageView
            android:id="@+id/imageSubject"
            android:layout_width="@dimen/home_subject_card_size"
            android:layout_height="@dimen/home_subject_card_size"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/margin_small"

            />

        <com.example.locktrust.widgets.CustomTextViewHeavy
            android:id="@+id/tvSubject"
            style="@style/wrapBoth"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="3"
            android:minLines="3"
            android:paddingStart="@dimen/margin_small"
            android:paddingEnd="@dimen/margin_small"
            android:textAllCaps="false"
            android:textColor="@color/darkBlue"
            android:textSize="@dimen/text_small"
            tools:text="Mathematics subject for testing " />

    </LinearLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:elevation="@dimen/margin_five"
        android:gravity="center"
        android:background="@drawable/bank_card_back"
        android:layout_margin="@dimen/margin_ten">
        <ImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/ivOptions"
            android:layout_margin="@dimen/margin_five"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/add_money" />

        <com.example.locktrust.widgets.CustomTextViewMedium
            android:id="@+id/tvOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivOptions"
            android:gravity="center"
            android:textSize="@dimen/text_eight"
            android:layout_marginBottom="@dimen/margin_five"
            android:text="ADD MONEY"/>
    </RelativeLayout>


</LinearLayout>